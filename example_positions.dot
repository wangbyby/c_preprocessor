digraph example {
    // 设置图形属性
    graph [bgcolor=white, size="8,6"];
    node [fontname="Arial", fontsize=12];
    
    // 不同位置和尺寸的节点示例
    A [pos="100,400", height=0.5, width=1.0, label="节点A\n(100,400)", shape=box, style=filled, fillcolor=lightblue];
    B [pos="300,400", height=0.8, width=0.6, label="节点B\n(300,400)", shape=ellipse, style=filled, fillcolor=lightgreen];
    C [pos="500,400", height=0.3, width=1.5, label="节点C (500,400)", shape=box, style=filled, fillcolor=lightyellow];
    
    // 第二行节点
    D [pos="100,250", height=1.0, width=0.8, label="高节点D\n(100,250)", shape=box, style=filled, fillcolor=lightcoral];
    E [pos="300,250", height=0.4, width=2.0, label="宽节点E (300,250)", shape=box, style=filled, fillcolor=lightpink];
    F [pos="500,250", height=0.6, width=0.6, label="节点F\n(500,250)", shape=circle, style=filled, fillcolor=lightgray];
    
    // 第三行 - 展示合并节点的例子
    Merge [pos="300,100", height=0.5, width=0.75, label="合并", shape=box, style=filled, fillcolor=orange];
    
    // 连接线
    A -> D;
    B -> E;
    C -> F;
    D -> Merge;
    E -> Merge;
    F -> Merge;
    
    // 添加坐标参考线（注释形式说明）
    // 坐标系：左下角为原点(0,0)，向右为x正方向，向上为y正方向
}